<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hust.jifa.resume.MainActivity">

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_centerInParent="true"
        android:layout_width="96dp"
        android:layout_height="96dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/avatar"
            app:civ_border_width="2dp"
            app:civ_border_color="#7b7b7b"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/start"
        android:src="@mipmap/start"
        android:layout_centerInParent="true"
        android:paddingTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/name"
        android:text="许矶法"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="48dp"/>
    <LinearLayout
        android:id="@+id/button_layout"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:onClick="onEducationBackgroundClick"
            android:background="@drawable/frame"
            android:text="教育背景"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <Button
            android:onClick="onSkillClick"
            android:layout_margin="10dp"
            android:background="@drawable/frame"
            android:text="技术成长"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <Button
            android:layout_margin="10dp"
            android:background="@drawable/frame"
            android:onClick="onExperienceClick"
            android:text="工作经历"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <Button
            android:onClick="onOtherClick"
            android:layout_margin="10dp"
            android:background="@drawable/frame"
            android:text="其他"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
    </LinearLayout>



</RelativeLayout>
